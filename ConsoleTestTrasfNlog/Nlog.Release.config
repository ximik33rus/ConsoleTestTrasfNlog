<?xml version="1.0" encoding="utf-8" ?>
<!-- For more information on using transformations 
     see the web.config examples at http://go.microsoft.com/fwlink/?LinkId=214134. -->
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd D:\devBSI_C#\MyWork\ws_LeadReceiver\ws_LeadReceiver\NLog.xsd"
 autoReload="true"
 throwExceptions="false"
 internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">
    
    <variable name="mailTo" value="mail" xdt:Transform="Replace" xdt:Locator="Match(name)"/>

    <targets>
      <target name="console" xsi:type="ColoredConsole"
              layout="${logLayout}"
      />

      <target name="file" xsi:type="file"
              filename="${logDir}/${appName}R.log"
              xdt:Transform="Replace" xdt:Locator="Match(name)"/>
    </targets>
  </nlog>
</configuration>